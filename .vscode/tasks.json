{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "mingw32-make -j4",
            "options": {
                "env": {
                    "CXX": "clang++",
                },
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
            },
        },
        {
            "label": "Build & Run",
            "type": "shell",
            "dependsOn": ["Build"],
            "command": "cd bin && modular-forms.exe",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
            },
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "cd bin && modular-forms.exe",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
            },
        },
        {
            "label": "Update project",
            "type": "shell",
            "command": "mingw32-make commands_fixed",
            "options": {
                "env": {
                    "CXX": "clang++",
                    "CXXFLAGS_EXTRA": "-target x86_64-w64-windows-gnu",
                    "EXCLUDE_DIRS": "lib/include",
                },
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
            },
        },
    ]
}